/* pages/wantWatch/wantWatch.wxss */
.want-watch{
  width: 100%;
  height: 100%;
}
.text{
  position: absolute;
  width: 100%;
  height: 100%;
  align-items:center; 
  display: -webkit-flex;
  justify-content:center; 
  display: -webkit-flex;
}
.movie-header{
  color: #787878;
  font-size: 12px;
  height: 40px;
  line-height: 40px;
  margin-left: 10px;
}
.movie-lists{
  padding: 10px;
  background-color: #fff;
  font-size: 14px;
  color: #787878;
  border-top: 1px solid #eaeaea;
  overflow: auto;
  position: relative;
  border-bottom: 1px solid #b3b1b1;
}
.item-left{
  float: left;
  width: 65px;
  height: 95px;
}
.item-left image{
  width: 100%;
  height: 100%;
  border-radius: 6px;
}
.item-middle{
  width: 55%;
  padding-left: 10px;
  overflow: hidden;
}
.movie-name{
  display: inline-block;
  font-size: 16px;
  color: #000;
  font-weight: 450;
  max-width: 140px;
  overflow: hidden;
  white-space: nowrap;
  vertical-align: middle;
  text-overflow: ellipsis;
}
.movie-score{
  margin-top: 6px;
  font-size: 12px;
}
.movie-score-number{
  font-size: 12px;
  color: #ff9c1c;
  margin-left: 4px;
}
.show-time{
  margin-top: 6px;
  font-size: 12px;
}

.item-right{
  position: absolute;
  top: 50%;
  right: 10px;
  transform: translateY(-50%);
}
.way{
  display: block;
  width: 50px;
  height: 24px;
  font-size: 12px;
  border-radius: 20px;
  text-align: center;
  line-height: 24px;
  color: #fff;
}
.way .buy-ticket{
  background-color: rgb(252, 82, 82);
}