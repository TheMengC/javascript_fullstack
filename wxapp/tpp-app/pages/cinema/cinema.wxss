/* pages/cinema/cinema.wxss */
.header{
  width: 100%;
  height: 30px;
}
.header-left{
  float: left;
  height: 30px;
  line-height: 30px;
  width: 33%;
  display: flex;
  justify-content: left;
  align-items: center;
}
.image{
  float: left;
  margin-top: 5px;
  width: 20px;
  height: 20px;
  margin-left: 10px;
  margin-top: 0;
}
.image image{
  width: 100%;
  height: 100%;
}
.city{
  float: left;
  font-size: 12px;
  max-width: 80px;
  color: #000;
  margin-left: 2px;
  overflow:hidden;
  white-space:nowrap;
  text-overflow:ellipsis;
}
.triangle{
  float: left;
  width: 0;
  height: 0;
  border-left: 3px solid transparent;
  border-right: 3px solid transparent;
  border-top: 3px solid #000;
  margin-left: 2px;
}
.header-middle{
  float: left;
  width: 49.5%;
  height: 30px;
  line-height: 30px;
}
.choice{
  width: 100%;
  height: 20px;
  line-height: 20px;
  margin-top: 5px;
  margin-bottom: 5px;
  display: flex;
}
.area{
  flex: 1;
  text-align: center;
  font-size: 10px;
  border-left: 1px solid #8f8f8f;
  border-right: 1px solid #8f8f8f;
  display: flex;
  justify-content: center;
  align-items: center;
}
.sort{
  flex: 1;
  text-align: center;
  font-size: 10px;
  border-right: 1px solid #8f8f8f;
  display: flex;
  justify-content: center;
  align-items: center;
}
.features{
  flex: 1;
  text-align: center;
  font-size: 10px;
  border-right: 1px solid #8f8f8f;
  display: flex;
  justify-content: center;
  align-items: center;
}
.icon{
  float: left;
  width: 0;
  height: 0;
  border-left: 3px solid transparent;
  border-right: 3px solid transparent;
  border-top: 3px solid #000;
  margin-left: 2px;
}
.header-right{
  width: 16.5%;
  float: right;
  display: flex;
  justify-content: center;
  position: relative;
}
.search{
  position: absolute;
  width: 20px;
  height: 20px;
  margin-top: 5px;
  margin-bottom: 5px;
}
.search image{
  width: 100%;
  height: 100%;
}
.creama-list{
  width: 98%;
  float: right;
  height: 80px;
}
.list-left{
  float: left;
  width: 80%;
}