.header{
  width: 100%;
  height: 120px;
  background-color: #ef4238;
  position: relative;
}
.login{
  position: absolute;
  width: 200px;
  height: 60px;
  line-height: 60px;
  margin-left: 20px;
  vertical-align: middle;
  top: 50%;
  transform: translateY(-50%);
}
.img{
  display: inline-block;
  width: 60px;
  height: 100%;
}
.img image{
  width: 100%;
  height: 100%;
  border-radius: 50%;
}
.login-immediately {
  margin-left: 4px;
  position: absolute;
  float: left;
  color: #fff;
  font-weight: 800;
}
.tab-list{
  width: 100%;
}
ul li{
  position: relative;
  display: block;
  margin-left: 10px;
  margin-right: 20px;
  height: 40px;
  line-height: 40px;
  border-bottom: 1px solid #eee;
}
.tab{
  font-size: 14px;
}
.describe{
  position: absolute;
  right: 0;
  font-size: 10px;
  color: rgb(126, 120, 120);
}