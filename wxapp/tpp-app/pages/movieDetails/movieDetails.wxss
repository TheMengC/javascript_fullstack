/* pages/movieDetails/movieDetails.wxss */
.movie{
  position: relative;
  width: 100%;
  min-height: 100vh;
  background-color: rgb(196, 196, 196);
  z-index: -3;
}
.bgc{
  position: absolute;
  top: 0;
  width: 100%;
  height: 300px;
  background-color: rgb(88, 88, 88);
  z-index: -2;
}
.movie-name{
  position: absolute;
  left: 110px;
  top: 62px;
}
.name{
  color: #fff;
  font-size: 20px;
}
.image{
  position: absolute;
  width: 80px;
  height: 110px;
  top: 60px;
  left: 20px;
}
.image image{
  width: 100%;
  height: 100%;
}
.movie-header{
  position: absolute;
  top: 100px;
  width: 100%;
  height: 300px;
  background-color: #fff;
  z-index: -1;
  border-radius: 10px 10px 0 0;
}
.movie-information{
  position: absolute;
  left: 110px;
  top: 10px;
  font-size: 12px;
  color: #666666;
}
.how-many{
  color: #000;
}
.xinlang{
  width: 16px;
  height: 16px;
}




